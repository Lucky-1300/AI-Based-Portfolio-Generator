# Environment Configuration Template

# Node Environment
NODE_ENV=production

# Backend Configuration
BACKEND_PORT=5000
LOG_LEVEL=info

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=Portfolio Generator

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme_in_production
MONGO_DB_NAME=portfolio
MONGO_PORT=27017

# Redis Configuration
REDIS_PASSWORD=changeme_in_production
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# API Configuration
CORS_ORIGIN=http://localhost:3000
API_RATE_LIMIT=100

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@portfoliogenerator.com

# AWS Configuration (if using S3 for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=portfolio-files

# File Upload Configuration
MAX_FILE_SIZE=20971520
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,gif,svg,docx

# Database Backup Configuration
BACKUP_SCHEDULE=0 2 * * * # 2 AM daily
BACKUP_RETENTION_DAYS=30

# External Service Keys
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn
LOG_RETENTION_DAYS=30

# Deployment Specific
ENVIRONMENT_NAME=production
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_DATE=2026-01-12

# Security
SESSION_SECRET=change_this_session_secret_in_production
SECURE_COOKIES=true
HTTPS_ONLY=true

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_AI_ENHANCEMENT=true
FEATURE_EXPORT_PDF=true
FEATURE_EXPORT_HTML=true
FEATURE_EXPORT_REACT=true
FEATURE_CUSTOM_DOMAIN=false
FEATURE_ADVANCED_ANALYTICS=false
